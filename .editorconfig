# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 2
indent_style = space

[Dockerfile]
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.sql,*.{yml,yaml}]
indent_size = 4
indent_style = space

